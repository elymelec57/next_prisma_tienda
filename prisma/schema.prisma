generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  password String 
  roles Rol[]
  products Product[]
  pedidos Pedido[]
  business Business?
}

model Rol {
  id        Int     @id @default(autoincrement())
  name     String
  users User[]
  createdAt DateTime @default(now())
}

model Category {
  id    Int                 @id @default(autoincrement())
  name  String
  products Product[]
}
